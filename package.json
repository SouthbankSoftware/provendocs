  "scripts": {
    "start": "npm run clean-dist && npm run build-server && npm run webpack-prod && node bin/www",
    "start:log": "npm run clean-dist && npm run build-server && npm run webpack-prod && nodemon --exec babel-node -- bin/www > ~/tmp/provendocs.log",
    "build": "npm run clean-dist && npm run build-server && npm run webpack-prod",
    "build-server": "yarn babel src/server --out-dir dist --copy-files && cp -r src/server/helpers/workers/certificate dist/helpers/certificate && mkdir -p dist/helpers/certificates && mkdir -p dist/helpers/archives  && mkdir -p dist/uploads && mkdir -p dist/helpers/uploads",
    "clean-dist": "rm -f -r -d dist",
    "webpack-prod": "cross-env NODE_ENV=production webpack",
    "server-dev": "cross-env NODE_ENV=development nodemon --exec babel-node -- src/server/index.js && mkdir dist/uploads",
    "webpack-dev": "cross-env NODE_ENV=development webpack-dev-server --devtool inline-source-map --hot --open --history-api-fallback",
    "dev": "concurrently \"yarn server-dev\" \"yarn webpack-dev\"",
    "dev:log": "concurrently \"yarn server-dev > /tmp/provendocs.log\" \"yarn webpack-dev\"",
    "test": "yarn test:server",
    "test:server": "jest src/server/*",
    "test:client": "jest --watch --coverage --config=jest.json",
    "flow": "flow",
    "format": "prettier --write 'packages/**/*.js'",
    "postinstall": "patch-package",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "lint-staged": {
    "*.{js,jsx,css}": [
      "prettier --parser typescript --write --single-quote",
      "eslint --fix",
      "git add"
    ]
  }
